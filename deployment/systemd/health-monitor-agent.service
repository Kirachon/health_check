[Unit]
Description=Health Monitor Agent
After=network.target

[Service]
Type=simple
User=health-monitor
Group=health-monitor
WorkingDirectory=/opt/health-monitor/agent
Environment="PATH=/opt/health-monitor/agent/venv/bin"
ExecStart=/opt/health-monitor/agent/venv/bin/python /opt/health-monitor/agent/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=health-monitor-agent

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/health-monitor/agent

[Install]
WantedBy=multi-user.target
